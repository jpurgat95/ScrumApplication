@page
@model ScrumApplication.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Lista wydarzeń";
}
@Html.AntiForgeryToken()
<div class="card mb-5 pb- shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Dodaj nowe wydarzenie</h5>
    </div>
    <div class="card-body" style="min-height: 500px;">
        <div class="row d-flex pb-5 align-items-stretch">
            <!-- Formularz -->
            <div class="col-md-6 pe-3" style="border-right: 4px solid #006400;">
                <form method="post" class="h-100 d-flex flex-column justify-content-start">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Tytuł wydarzenia</label>
                        <input asp-for="Title" class="form-control" placeholder="Wprowadź tytuł wydarzenia" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Opis wydarzenia</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Dodaj krótki opis"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="StartDate" class="form-label">Data rozpoczęcia</label>
                        <input name="StartDate" type="datetime-local" class="form-control"
                               value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="EndDate" class="form-label">Data zakończenia</label>
                        <input name="EndDate" type="datetime-local" class="form-control"
                               value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")" required />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success mt-auto">
                        <i class="bi bi-plus-circle"></i> Dodaj wydarzenie
                    </button>
                </form>
            </div>

            <!-- Kalendarz -->
            <div class="col-md-6 ps-3 d-flex flex-column">
                <div id="calendar" class="flex-grow-1"></div>
                <div class="mt-2 d-flex align-items-right">
                    <div class="me-3 d-flex align-items-center">
                        <span class="badge me-1" style="background-color: #198754;">&nbsp;&nbsp;</span> Wykonane
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge me-1" style="background-color: #ffc107;">&nbsp;&nbsp;</span> W trakcie
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Tabela zadań -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Lista wydarzeń</h5>
    </div>
    <div class="card-body table-responsive">
        <table id="eventsTable" class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Tytuł</th>
                    <th>Opis</th>
                    <th>Data rozpoczęcia</th>
                    <th>Data zakończenia</th>
                    <th>Status</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Użytkownik</th>
                    }
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model.Events)
                {
                    <tr id="event-@ev.Id">
                        <td class="event-title">@ev.Title</td>
                        <td class="event-desc">@ev.Description</td>
                        <td class="event-start">@ev.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="event-end">@ev.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="event-status">
                            @if (ev.IsDone)
                            {
                                <span class="badge bg-success">Wykonane</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">W trakcie</span>
                            }
                        </td>

                        @* Kolumna użytkownika tylko dla admina *@
                        @if (User.IsInRole("Admin"))
                        {
                            <td>@ev.User?.UserName</td>
                        }

                        <td>
                            <a asp-page="./Edit" asp-route-id="@ev.Id" class="btn btn-sm btn-outline-secondary me-1" title="Edytuj wydarzenie">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <button class="btn btn-sm btn-outline-primary toggle-done" data-id="@ev.Id" title="Zmień status">
                                @if (ev.IsDone)
                                {
                                    <i class="bi bi-arrow-counterclockwise"></i>
                                }
                                else
                                {
                                    <i class="bi bi-check2"></i>
                                }
                            </button>


                            <!-- Przycisk wywołujący modal -->
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@ev.Id"
                                    title="Usuń wydarzenie">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<!-- Modal potwierdzenia usunięcia -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Potwierdzenie usunięcia</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Czy na pewno chcesz usunąć to wydarzenie? Tej operacji nie można cofnąć.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">
                    Anuluj
                </button>
                <form id="deleteForm" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash me-1"></i> Usuń
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Toasty Bootstrap -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
    <div id="liveToast" class="toast align-items-center text-bg-@(TempData["ToastType"] ?? "info") border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["ToastMessage"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#eventsTable').DataTable({
                responsive: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/pl.json"
                }
            });

            // Modal - przekazywanie ID do formularza
            var deleteModal = document.getElementById('deleteModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
            });

            // Toasty
            var toastEl = document.getElementById('liveToast');
            if ('@TempData["ToastMessage"]' !== '') {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
    <!-- Kalendarz JS -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            initCalendar('/Api/Events'); // ← tutaj podajesz swój endpoint
        });
    </script>
    <!-- Skrypt do modala-->
    <script>
        // Ustawienie action formularza przy otwieraniu modala
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var eventId = button.getAttribute('data-id');
            var form = deleteModal.querySelector('#deleteForm');
            form.action = `/Events?handler=Delete&id=${eventId}`;
        });
    </script>
}