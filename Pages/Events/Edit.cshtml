@page "{id:int}"
@model ScrumApplication.Pages.Events.EditModel
@{
    ViewData["Title"] = "Edytuj wydarzenie";
}

<h1>Edytuj wydarzenie</h1>

<form method="post" class="card p-3 shadow-sm">
    <div class="mb-3">
        <label for="Title" class="form-label">Tytuł</label>
        <input asp-for="Event.Title" class="form-control" id="Title" required />
        <span asp-validation-for="Event.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Opis</label>
        <textarea asp-for="Event.Description" class="form-control" id="Description"></textarea>
        <span asp-validation-for="Event.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Date" class="form-label">Data wydarzenia</label>
        <input asp-for="Event.Date" type="date" class="form-control" id="Date" />
        <span asp-validation-for="Event.Date" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input type="checkbox"
               class="form-check-input custom-checkbox"
               id="IsDone"
               asp-for="Event.IsDone" /> 
        <label class="form-check-label ms-1" for="IsDone">Zrobione</label>
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success flex-grow-1">Zapisz zmiany</button>
        <a asp-page="/Events/Index" class="btn btn-secondary flex-grow-1 text-center">Anuluj</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
