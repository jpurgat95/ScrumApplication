@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scrum Application</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Twój dodatkowy CSS (opcjonalnie) -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #d8f3dc; /* pastelowy zielony */
        }

        main.container {
            flex: 1;
        }

        header.navbar {
            background-color: #40916c; /* ciemniejszy zielony */
        }

            header.navbar a {
                color: white !important;
            }

        footer {
            background-color: #40916c;
            color: white;
            padding: 1rem 0;
            margin-top: 2rem;
        }
    </style>

    @RenderSection("Styles", required: false)  <!-- tutaj dodane -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">Scrum Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Zadania</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Events">Wydarzenia</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            <p>© @DateTime.Now.Year - Scrum Application</p>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
