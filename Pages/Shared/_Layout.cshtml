@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scrum Application</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Twój dodatkowy CSS (opcjonalnie) -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #d8f3dc; /* pastelowy zielony */
        }

        main.container {
            flex: 1;
        }

        header.navbar {
            background-color: #40916c; /* ciemniejszy zielony */
        }

            header.navbar a {
                color: white !important;
            }

        footer {
            background-color: #40916c;
            color: white;
            padding: 1rem 0;
            margin-top: 2rem;
        }
    </style>

    @RenderSection("Styles", required: false)  <!-- tutaj dodane -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: #155724;">
            <div class="container">
                <a class="navbar-brand fw-bold text-white d-flex align-items-center" asp-page="/Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-house-door-fill me-2" viewBox="0 0 16 16">
                        <path d="M6.5 14.5v-3.5h3v3.5a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-6h1.5L8 1 1 8h1.5v6a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5z" />
                    </svg>
                    Scrum Application
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            <p>© @DateTime.Now.Year - Scrum Application</p>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
