@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; ">
    <div class="card shadow-lg p-5" style="max-width: 450px; width: 100%; border-radius: 1rem; background-color: #e8f5e9;">
        <div class="card-body">
            <h2 class="text-center mb-4 text-dark">Logowanie</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label text-dark"></label>
                    <input asp-for="Input.Email" class="form-control input-border" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label text-dark"></label>
                    <input asp-for="Input.Password" class="form-control input-border" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input custom-checkbox" />
                    <label asp-for="Input.RememberMe" class="form-check-label text-dark">Zapamiętaj mnie</label>
                </div>

                <button type="submit" class="btn btn-success w-100">Zaloguj się</button>
            </form>
        </div>
    </div>
</div>
<!--Toast do zmiany hasła-->
<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div id="successToast" class="toast bg-success text-white position-fixed bottom-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
        <div class="toast-body">
            @TempData["SuccessMessage"]
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
  document.addEventListener("DOMContentLoaded", function () {
    var toastEl = document.getElementById('successToast');
    if (toastEl && toastEl.querySelector('.toast-body').textContent.trim().length > 0) {
      var toast = new bootstrap.Toast(toastEl);
      toast.show();
    }
  });
</script>
}